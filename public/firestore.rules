rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // General rule for all documents (temporary rule with expiration date)
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 5, 11);
    }

    match /comments/{userEmail} {
      allow read: if true; // Allow anyone to read comments
      allow create: if request.auth != null && request.auth.token.email == userEmail; // Only the user can create their comment
      allow delete: if request.auth != null && request.auth.token.email == userEmail; // Only the user can delete their comment
    }
  }
}
