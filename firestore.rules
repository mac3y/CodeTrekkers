rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // General rule for all documents (temporary rule with expiration date)
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 5, 11);
    }

    // Allow anyone to read comments
    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null; // Only authenticated users can create comments
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId; // Only the comment owner can delete
    }
  }
}
